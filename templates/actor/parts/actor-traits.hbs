<div class="resources grid grid-2col">

  <div class="resource flex-group-center">
    <div class="grid-2col-header">Advantages</div>
    <ol class='items-list'>
      <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-controls'>
          <a
            class='item-control item-create'
            title='{{localize "DOCUMENT.Create" type='Advantage'}}'
            data-type='advantage'
          >
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type='item'}}
          </a>
        </div>
      </li>
      {{#each advantages as |item id|}}
        <li class='item flexrow item-row' data-item-id='{{item._id}}'>
          <div class='item-name'>
            <div class='item-image'>
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Advantage'}}'>
                <img
                  src='{{item.img}}'
                  title='{{item.name}}'
                  width='24'
                  height='24'
                />
              </a>
            </div>
            <a
              class='item-control item-edit bold'
              title='{{localize "DOCUMENT.Update" type='Advantage'}}'
            >
              {{item.name}}
            </a>
          </div>
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type='Item'}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
              title='{{localize "DOCUMENT.Delete" type='Item'}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

  <div class="resource flex-group-center">
    <div class="grid-2col-header">Drawbacks</div>
    <ol class='items-list'>
      <li class='item flexrow items-header'>
        <div class='item-name'>{{localize 'Name'}}</div>
        <div class='item-controls'>
          <a
            class='item-control item-create'
            title='{{localize "DOCUMENT.Create" type='Drawback'}}'
            data-type='drawback'
          >
            <i class='fas fa-plus'></i>
            {{localize 'DOCUMENT.New' type='item'}}
          </a>
        </div>
      </li>
      {{#each drawbacks as |item id|}}
        <li class='item flexrow item-row' data-item-id='{{item._id}}'>
          <div class='item-name'>
            <div class='item-image'>
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='Drawback'}}'>
                <img
                  src='{{item.img}}'
                  title='{{item.name}}'
                  width='24'
                  height='24'
                />
              </a>
            </div>
            <a
              class='item-control item-edit bold'
              title='{{localize "DOCUMENT.Update" type='Drawback'}}'
            >
              {{item.name}}
            </a>
          </div>
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type='Item'}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
              title='{{localize "DOCUMENT.Delete" type='Item'}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>

</div>