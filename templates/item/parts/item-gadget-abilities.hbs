    {{!-- Abilities Tab --}}
    <div class="tab abilities" data-group="primary" data-tab="abilities">
      
      {{!-- Gadget values --}}
      <section class="gadget-properties grid grid-2coll border-bottom">
        <div class="gadget-property flex-group-center">
          <label for="system.actionValue" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.ActionValue'}}">{{localize 'MEGS.ActionValue'}}</label>
          {{#if flags.megs.edit-mode}}
            {{> plusMinusInput id='actionValue' classes='attribute-input' min=0 value=system.actionValue}}
          {{else}}
            {{system.actionValue}}
          {{/if}}
        </div>
        <div class="gadget-property flex-group-center">
          <label for="system.effectValue" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.EffectValue'}}">{{localize 'MEGS.EffectValue'}}</label>
          {{#if flags.megs.edit-mode}}
            {{> plusMinusInput id='effectValue' classes='attribute-input' min=0 value=system.effectValue}}
          {{else}}
            {{system.effectValue}}
          {{/if}}
        </div>

      </section>

      {{!-- Gadget attributes --}}
      <details open> <!-- TODO use flags for open -->
        <summary class="item-summary">Attributes {{gadgetAttributesDetailsOpen}}</summary>

    {{> "systems/megs/templates/actor/parts/actor-attributes.hbs"}}

      </details>

      {{!-- Gadget misc properties --}}
      <details open>
        <summary class="item-summary">Miscellaneous</summary>
        <section class="gadget-properties grid grid-3col">

          <div class="gadget-property flex-group-center">
            <label for="system.quantity" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.Quantity'}}">{{localize 'MEGS.Quantity'}}</label>
            <div>
          {{#if flags.megs.edit-mode}}
            {{> plusMinusInput id='quantity' classes='attribute-input' min=1 value=system.quantity}}
          {{else}}
            {{system.quantity}}
          {{/if}}
            </div>
          </div>

        {{#if (compare system.weapon.isWeapon "eq" "true")}}
          <div class="gadget-property flex-group-center">
            <label for="system.weapon.range" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.Range'}}">{{localize 'MEGS.Range'}}</label>
            <div>
          {{#if flags.megs.edit-mode}}
            <div class="quantity attribute-input">
              <button class="minus" aria-label="Decrease" onClick="rangeInput.value = parseInt(rangeInput.value) - 1">&minus;</button>
              <input id="rangeInput" type="text" class="input-box" name="system.weapon.range" value="{{system.weapon.range}}" data-dtype="number"/>
              <button class="plus" aria-label="Increase" onClick="rangeInput.value = parseInt(rangeInput.value) + 1">&plus;</button>
            </div>
          {{else}}
            {{system.weapon.range}}
          {{/if}}
            </div>
          </div>

          <div class="gadget-property flex-group-center">
            <label for="system.weapon.ammo" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.Ammo'}}">{{localize 'MEGS.Ammo'}}</label>
            <div>
          {{#if flags.megs.edit-mode}}
              <button class="minus" aria-label="Decrease" onClick="ammoInput.value = parseInt(ammoInput.value) - 1">&minus;</button>
              <input id="ammoInput" type="text" class="input-box" name="system.weapon.ammo" value="{{system.weapon.ammo}}" data-dtype="number"/>
              <button class="plus" aria-label="Increase" onClick="ammoInput.value = parseInt(ammoInput.value) + 1">&plus;</button>
          {{else}}
            {{system.weapon.ammo}}
          {{/if}}
            </div>
          </div>
        {{/if}}
          
          <div class="gadget-property flex-group-center">
            <label for="system.isCarried" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.IsCarried'}}">{{localize 'MEGS.IsCarried'}}</label>
            <div>
          {{#if flags.megs.edit-mode}}
            <select  class="resource-select"  name="system.isCarried" data-type="String">
              {{#select system.isCarried}}
                  <option value="true">{{localize 'MEGS.Yes'}}</option>
                  <option value="false">{{localize 'MEGS.No'}}</option>
              {{/select}}
            </select>
          {{else}}
            {{system.isCarried}}
          {{/if}}
            </div>
          </div>
          
          <div class="gadget-property flex-group-center">
            <label for="system.canBeTakenAway" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.CanBeTakenAway'}}">{{localize 'MEGS.CanBeTakenAway'}}</label>
            <div>
          {{#if flags.megs.edit-mode}}
            <select  class="resource-select"  name="system.canBeTakenAway" data-type="String">
              {{#select system.canBeTakenAway}}
                  <option value="false">{{localize 'MEGS.No'}}</option>
                  <option value="true">{{localize 'MEGS.Yes'}}</option>
              {{/select}}
            </select>
          {{else}}
            {{system.canBeTakenAway}}
          {{/if}}
            </div>
          </div>
          
          <div class="gadget-property flex-group-center">
            <label for="system.hasHardenedDefenses" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.HasHardenedDefenses'}}">{{localize 'MEGS.HasHardenedDefenses'}}</label>
            <div>
          {{#if flags.megs.edit-mode}}
            <select  class="resource-select"  name="system.hasHardenedDefenses" data-type="String">
              {{#select system.hasHardenedDefenses}}
                <option  value="false">{{localize 'MEGS.No'}}</option>
                <option  value="true">{{localize 'MEGS.Yes'}}</option>
              {{/select}}
            </select>
          {{else}}
            {{system.hasHardenedDefenses}}
          {{/if}}
            </div>
          </div>

          {{!-- Gadget reliability --}}
          <div class="gadget-property flex-group-center">
            <label for="system.reliability" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.Reliability'}}">{{localize 'MEGS.Reliability'}}</label>
          {{#if flags.megs.edit-mode}}
            {{> plusMinusInput id='reliability' classes='attribute-input' min=0 value=system.reliability}}
          {{else}}
            {{system.reliability}}
          {{/if}}
          </div>

          <div class="gadget-property flex-group-center">
            <label for="system.isBroken" class="resource-label flexlarge align-left" data-label="{{localize 'MEGS.IsBroken'}}">{{localize 'MEGS.IsBroken'}}</label>
            <div>
          {{#if flags.megs.edit-mode}}
            <select  class="resource-select"  name="system.isBroken" data-type="String">
              {{#select system.isBroken}}
                  <option  value="false">{{localize 'MEGS.No'}}</option>
                  <option  value="true">{{localize 'MEGS.Yes'}}</option>
              {{/select}}
            </select>
          {{else}}
            {{system.isBroken}}
          {{/if}}
            </div>
          </div>
        </section>
      </details>

    </div>
